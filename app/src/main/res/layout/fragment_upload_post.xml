
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.course.UploadPostFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CLUpload"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/black"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TVPost"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/upload_post"
                android:textSize="@dimen/h4"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_margin="@dimen/large_margin"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/CLUpload"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/TVTitle"
            android:text="@string/post_title"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="@dimen/large_margin"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/TVTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ETTitle"
            android:hint="@string/title"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/grey"
            android:layout_marginLeft="@dimen/large_margin"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ETTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/TVDescription"
            android:text="@string/post_description"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="@dimen/large_margin"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/TVDescription"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ETDescription"
            android:hint="@string/description"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/grey"
            android:layout_marginLeft="@dimen/large_margin"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ETDescription"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/TVImages"
            android:text="Upload Images"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="@dimen/large_margin"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/TVImages"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/RVImages"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/RVImages"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/BTNImages"
            android:layout_margin="@dimen/medium_margin"
            android:text="@string/upload_images"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/black"
            android:backgroundTint="@color/_5_views_color"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/BTNImages"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/TVVideos"
            android:text="Upload Videos"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="@dimen/large_margin"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/TVVideos"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/RVVideos"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/RVVideos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/BTNVideos"
            android:layout_margin="@dimen/medium_margin"
            android:text="@string/upload_videos"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/black"
            android:backgroundTint="@color/_5_views_color"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/BTNVideos"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/TVPDFs"
            android:text="Upload PDFs"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="@dimen/large_margin"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/TVPDFs"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/RVPDFs"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/RVPDFs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/BTNPDFs"
            android:layout_margin="@dimen/medium_margin"
            android:text="@string/upload_pdfs"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/black"
            android:backgroundTint="@color/_5_views_color"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/BTNPDFs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/BTNConfirm"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginTop="@dimen/xlarge_margin"
            android:text="@string/upload_post"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimaryDark"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/BTNConfirm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/BTNCancel"
            android:layout_margin="@dimen/standard_margin"
            android:text="@string/discard"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/white"
            android:backgroundTint="@color/rectangle_10_color"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>