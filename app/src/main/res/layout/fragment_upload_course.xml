<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.course.UploadCourseFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CLUpload"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/black"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/upload_course"
                android:textSize="@dimen/h4"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_margin="@dimen/large_margin"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/CLUpload"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/TVTitle"
            android:text="@string/course_title"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="@dimen/large_margin"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/TVTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ETTitle"
            android:hint="@string/title"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/grey"
            android:layout_marginLeft="@dimen/large_margin"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ETTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/TVDescription"
            android:text="@string/course_description"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="@dimen/large_margin"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/TVDescription"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/ETDescription"
            android:hint="@string/description"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/grey"
            android:layout_marginLeft="@dimen/large_margin"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ETDescription"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/TVChooseImage"
            android:text="Choose Cover Image"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="@dimen/large_margin"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/TVChooseImage"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/IVCoverImage"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/IVCoverImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/BTNChooseImage"
            android:layout_margin="@dimen/medium_margin"
            android:text="@string/choose_image"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/black"
            android:backgroundTint="@color/_5_views_color"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/BTNChooseImage"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/TVLevel1"
            android:text="Upload Level 1"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="@dimen/large_margin"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/TVLevel1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/BTNLevel1"
            android:layout_margin="@dimen/medium_margin"
            android:text="@string/level1"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/black"
            android:backgroundTint="@color/_5_views_color"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/BTNLevel1"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/TVLevel2"
            android:text="Upload Level 2"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="@dimen/large_margin"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/TVLevel2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/BTNLevel2"
            android:layout_margin="@dimen/medium_margin"
            android:text="@string/level2"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/black"
            android:backgroundTint="@color/_5_views_color"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/BTNLevel2"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/TVLevel3"
            android:text="Upload Level 3"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="@dimen/large_margin"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/TVLevel3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/BTNLevel3"
            android:layout_margin="@dimen/medium_margin"
            android:text="@string/level3"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/black"
            android:backgroundTint="@color/_5_views_color"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/BTNLevel3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/BTNConfirm"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginTop="@dimen/xlarge_margin"
            android:text="@string/upload_course"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimaryDark"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/BTNConfirm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/BTNCancel"
            android:layout_margin="@dimen/standard_margin"
            android:text="@string/discard"
            android:textSize="@dimen/normal_text"
            android:textColor="@color/white"
            android:backgroundTint="@color/rectangle_10_color"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>