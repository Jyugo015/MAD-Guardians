<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".resetpasswordpage">

    <View
        android:id="@+id/bg_white"
        android:layout_width="393dp"
        android:layout_height="851dp"
        android:background="@drawable/bg_white_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"/>

    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="393dp"
        android:layout_height="851dp"
        android:contentDescription="img_bg"
        android:src="@drawable/img_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"/>

    <TextView
        android:id="@+id/need_an_account_"
        android:layout_width="229dp"
        android:layout_height="54dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="589dp"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:text="@string/need_an_account__string"
        android:textColor="@color/need_an_account__color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sign_up"
        android:layout_width="75dp"
        android:layout_height="54dp"
        android:layout_marginStart="229dp"
        android:layout_marginTop="589dp"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:text="@string/signup"
        android:textColor="@color/sign_up_ek1_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/forget_password"
        android:layout_width="310dp"
        android:layout_height="65dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="240dp"
        android:fontFamily="@font/inter"
        android:text="Enter new password"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/group_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginTop="244dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <EditText
            android:id="@+id/code"
            android:background="@drawable/edit_text_rectangle"
            android:layout_width="296dp"
            android:layout_height="53dp"
            android:padding="10dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/inter"
            android:visibility="gone"
            android:hint="@string/code_string"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/new_password"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_rectangle"
            android:layout_width="296dp"
            android:layout_height="53dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="79dp"
            android:fontFamily="@font/inter"
            android:hint="@string/new_password_string"
            android:textSize="20sp"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/confirmed_password"
            android:background="@drawable/edit_text_rectangle"
            android:padding="10dp"
            android:layout_width="296dp"
            android:layout_height="53dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="151dp"
            android:fontFamily="@font/inter"
            android:hint="@string/confirm_password_string"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon_passwoard"
            android:layout_width="31dp"
            android:layout_height="30dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="90dp"
            android:contentDescription="vector_14"
            android:src="@drawable/icon_password_seen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon_passwoard2"
            android:layout_width="31dp"
            android:layout_height="30dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="164dp"
            android:contentDescription="vector_14"
            android:src="@drawable/icon_password_seen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/resetPassword"
        android:background="@drawable/red_button_shape"
        android:layout_width="296dp"
        android:layout_height="55dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="490dp"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:text="@string/reset_string"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>


