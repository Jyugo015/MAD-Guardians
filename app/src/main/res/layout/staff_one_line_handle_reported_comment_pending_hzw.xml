<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- CardView for the image -->
    <androidx.cardview.widget.CardView
        android:id="@+id/CardView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:clipToOutline="true"
        app:cardCornerRadius="25dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/IVPost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <!-- Reporter name TextView -->
    <TextView
        android:id="@+id/TVDescr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Report Reason"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/CardView"
        app:layout_constraintTop_toTopOf="@id/CardView" />

    <!-- Comment origin TextView -->
    <TextView
        android:id="@+id/TVInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Report Caption"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/TVDescr"
        app:layout_constraintTop_toBottomOf="@id/TVDescr" />

    <TextView
        android:id="@+id/TVInfo2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#E0E0E0"
        android:text="Report Details"
        android:textColor="#000000"
        android:textSize="14sp"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/TVInfo"
        app:layout_constraintTop_toBottomOf="@id/TVInfo"
        app:layout_constraintEnd_toEndOf="@+id/BTNDelete"/>

<!--    <TextView-->
<!--        android:id="@+id/TVInfo2"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="4dp"-->
<!--        android:background="#E0E0E0"-->
<!--        android:ellipsize="none"-->
<!--        android:scrollHorizontally="false"-->
<!--        android:singleLine="false"-->
<!--        android:text="Comment Origin"-->
<!--        android:textColor="#000000"-->
<!--        android:textSize="14sp"-->
<!--        app:layout_constraintEnd_toEndOf="@+id/BTNDelete"-->
<!--        app:layout_constraintStart_toStartOf="@id/TVInfo"-->
<!--        app:layout_constraintTop_toBottomOf="@id/TVInfo" />-->

    <!-- Report date TextView -->
    <TextView
        android:id="@+id/TVReportDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Report date"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/TVInfo2"
        app:layout_constraintTop_toBottomOf="@id/TVInfo2" />

    <!-- Keep Button -->
    <Button
        android:id="@+id/BTNKeep"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/hzw_green_button_shape"
        android:text="Keep"
        android:textColor="@color/bg_white_color"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/BTNDelete"
        app:layout_constraintTop_toBottomOf="@id/TVReportDate" />

    <!-- Delete Button -->
    <Button
        android:id="@+id/BTNDelete"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/hzw_green_button_shape"
        android:text="Delete"
        android:textColor="@color/bg_white_color"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TVReportDate" />

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BTNKeep" />
</androidx.constraintlayout.widget.ConstraintLayout>
