<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/bg_white"
        android:layout_width="393dp"
        android:layout_height="851dp"
        android:background="@drawable/bg_white_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"/>

    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="393dp"
        android:layout_height="851dp"
        android:contentDescription="img_bg"
        android:src="@drawable/img_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"/>

    <TextView
        android:id="@+id/remember_the_password_"
        android:layout_width="229dp"
        android:layout_height="54dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="589dp"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:text="@string/remember_the_password__string"
        android:textColor="@color/remember_the_password__color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/log_in"
        android:layout_width="75dp"
        android:layout_height="54dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="589dp"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:text="@string/login_string"
        android:textColor="@color/sign_up_ek1_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/email"
        android:layout_marginStart="49dp"
        android:layout_marginTop="395dp"
        android:layout_width="295dp"
        android:layout_height="51dp"
        android:background="@drawable/edit_text_rectangle"
        android:fontFamily="@font/inter"
        android:hint="@string/email_string"
        android:textColor="@color/remember_the_password__color"
        android:textSize="20sp"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:id="@+id/submit"
        android:layout_marginStart="49dp"
        android:layout_marginTop="490dp"
        android:layout_width="296dp"
        android:layout_height="55dp"
        android:background="@drawable/red_button_shape"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:text="@string/submit_string"
        android:textColor="@color/rectangle_4_color"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/enter_your_registered_email_below"
        android:layout_width="302dp"
        android:layout_height="59dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="306dp"
        android:fontFamily="@font/inter"
        android:text="@string/enter_your_registered_email_below_string"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/forget_password"
        android:layout_width="310dp"
        android:layout_height="65dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="240dp"
        android:fontFamily="@font/inter"
        android:text="@string/forget_password_string"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
